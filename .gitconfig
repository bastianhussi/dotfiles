[user]
	name = Bastian Hussi
	email = bastian@ipfso.de
[core]
	editor = nvim
[alias]
	st = status -sb
	lg = log --oneline --graph --decorate --all
	a = add .
	cm = commit -a
	co = checkout
	c = checkout -
	ft = fetch -ap
	pl = pull
	ps = push
[merge]
	tool = nvim
	conflictStyle = diff3
[diff]
	tool = nvim
[pull]
	rebase = true
[init]
	defaultBranch = main
